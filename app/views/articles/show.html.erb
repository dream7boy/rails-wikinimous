<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="container">
      <ul class="list-inline">
        <li><%= link_to "Go to the lists", articles_path %></li>
        <li><%= link_to "New Article", new_article_path %></li>
      </ul>

      <h2><%= @article.title %></h2>
        <ul class="list-inline">
          <li><%= link_to "Edit", edit_article_path %></li>
          <li><%= link_to "Delete", article_path, method: :delete, data: { confirm: "Are you sure?" }  %></li>
        </ul>
        <p><%=raw Kramdown::Document.new(@article.content).to_html %></p>
    </div>
  </div>
</div>
