<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="container">
      <%= link_to "New Article", new_article_path %>
      <% @articles.each do |article| %>
        <div>
          <h2><%= link_to article.title, article_path(article) %></h2>
          <p><%= article.content %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
